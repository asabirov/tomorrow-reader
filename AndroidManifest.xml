<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
     package="tel.cjs.tomorrowreader"
     android:versionCode="3"       
     android:versionName="1.1.1">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="4"/>
    <supports-screens android:largeScreens="true"
        android:normalScreens="true" android:smallScreens="true"
        android:anyDensity="true" android:resizeable="true" />
    <application android:theme="@style/DefaultTheme" 
       android:icon="@drawable/logo_a" 
       android:label="@string/app_name">
         <activity android:name=".Startup" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>                
            </intent-filter>
        </activity>
        <activity android:name="Signin" android:label="@string/signin_title" />
        <activity android:name="BookmarksManager" android:label="@string/bookmarks_manager_title" />
        <activity android:name="Reader" android:label="@string/reader_title" />            
    </application>
</manifest>