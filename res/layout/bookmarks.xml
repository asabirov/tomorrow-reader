<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent">    
        
    <RelativeLayout style="@style/TopBarLayout">
       
        <ImageView
            android:src="@drawable/logo_small" 
            android:layout_width="171px"
            android:layout_height="50px"            
            android:gravity="left"
            android:layout_alignParentLeft="true"/>
      
      
      
       <ImageButton android:id="@+id/refresh_button"
            android:src="@drawable/icon_refresh"            
            style="@style/TopBarButton"                
            android:layout_alignParentRight="true"/>
       
       <ImageView android:id="@+id/separator_b1"
            style="@style/TopBarSeparator" 
            android:layout_toLeftOf="@id/refresh_button" />
            
       <ImageButton android:id="@+id/add_button"            
            android:src="@drawable/icon_add"            
            style="@style/TopBarButton" 
            android:layout_toLeftOf="@id/separator_b1" />       
       
       <ImageView  android:id="@+id/separator_b2"
            style="@style/TopBarSeparator"
            android:layout_toLeftOf="@id/add_button" />  
       
    </RelativeLayout>    
    
    <ListView android:id="@android:id/list"         
         
         style="@style/BookmarksListView"/>    
    
    
    
    
    <!---->
    
</LinearLayout>
